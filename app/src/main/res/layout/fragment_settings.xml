<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryVariant">

    <Button
        android:id="@+id/button_share_app"
        style="@style/ButtonStyle"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/share_app"
        app:drawableRightCompat="@drawable/share"
        app:layout_constraintBottom_toTopOf="@+id/button_write_support"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themeSwitcher" />

    <Button
        android:id="@+id/button_write_support"
        style="@style/ButtonStyle"
        android:paddingStart="16dp"
        android:paddingEnd="14dp"
        android:text="@string/write_support"
        app:drawableRightCompat="@drawable/group"
        app:layout_constraintBottom_toTopOf="@+id/button_user_agreement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_share_app" />

    <Button
        android:id="@+id/button_user_agreement"
        style="@style/ButtonStyle"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:text="@string/user_agreement"
        app:drawableRightCompat="@drawable/forvard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_write_support" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        style="@style/TextSettingsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingStart="16dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="80dp"
        android:text="@string/dark_theme"
        app:layout_constraintBottom_toTopOf="@+id/button_share_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Settings"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/text_Settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>